<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_Signup1Activity"
    android:fitsSystemWindows="true"
    android:background="@color/background_white">


    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_signup1_back"
            android:background="@drawable/bg_circle_white"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.9"
            android:gravity="start"
            android:text="Tạo tài khoản"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal" />


    </LinearLayout>

    <View
        android:id="@+id/layout_top1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/layout_top2"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/layout_top1"
        android:src="@drawable/world_icon" />

    <TextView
        android:id="@+id/layout_top4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top2"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Tham gia Facebook"
        android:textColor="#050505"
        android:textSize="26sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/layout_top5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Chúng tôi sẽ giúp bạn tạo tài khoản mới sau vài bước dễ dàng"
        android:textColor="#767676"
        android:textSize="22sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/btn_signup1_go"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_top5"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_8dp_all_lightblue"
        android:gravity="center"
        android:text="Tiếp"
        android:textAllCaps="false"
        android:textColor="#ecfcff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_signup1_showdialog"
        android:textColor="#2361b3"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:textStyle="normal"
        android:text="Bạn đã có tài khoản ư?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>