<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="frag_signup_phone">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_signup3_1_back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.9"
            android:gravity="start"
            android:text="Ngày sinh"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal" />


    </LinearLayout>

    <TextView
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Nhập số di động của bạn"
        android:textColor="#050505"
        android:textSize="26sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_signup_phone_info"
        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="Nhập số di động để liên hệ của bạn. Bạn có thể ẩn thông tin này trên trang cá nhân sau."
        android:textColor="#767676"
        android:textSize="16sp"
        android:textStyle="normal" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@+id/tv_signup_phone_info"
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:hint="Số di động"
        android:layout_centerHorizontal="true"
        app:boxStrokeColor="#e1582c"
        app:hintTextColor="#e1582c"
        app:endIconMode="clear_text"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_signup_phone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_light_blue"
            android:textSize="20sp"
            android:textStyle="normal" />
        <requestFocus/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_below="@+id/layout3"
        android:id="@+id/btn_signup_phone_go"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_8dp_all_lightblue_ripple"
        android:gravity="center"
        android:text="Tiếp"
        android:textAllCaps="false"
        android:textColor="#ecfcff"
        android:textSize="20sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/btn_signup_phone_email"
        android:layout_alignParentBottom="true"
        android:textColor="#2361b3"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal"
        android:text="Đăng ký bằng địa chỉ email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>