<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_14dp_top_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/btn_dialog_bottom_sex_close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/bg_8dp_all_white"
            android:src="@drawable/x_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Chọn danh xưng"
            android:textColor="@color/black"
            android:textSize="26sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/layout_dialog_bottom_sex_her"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_rectangle_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Cô ấy"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Chúc cô ấy sinh nhật vui vẻ"
            android:textColor="#767676"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_dialog_bottom_sex_him"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_rectangle_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Anh ấy"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Chúc anh ấy sinh nhật vui vẻ"
            android:textColor="#767676"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_dialog_bottom_sex_them"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_rectangle_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Họ"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Chúc họ sinh nhật vui vẻ"
            android:textColor="#767676"
            android:textSize="16sp" />


    </LinearLayout>




</LinearLayout>