<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_8dp_all_white"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dialog_cannot_create_account_info"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="We can help you to find your old account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:id="@+id/btn_dialog_cannot_createAccount_find"
            android:textStyle="normal"
            android:textSize="18sp"
            android:background="@drawable/bg_8dp_all_white"
            android:layout_gravity="start"
            android:textColor="#3d698c"
            android:text="Find account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/btn_dialog_cannot_createAccount_stop"
            android:background="@drawable/bg_8dp_all_white"
            android:textColor="#3d698c"
            android:textStyle="normal"
            android:layout_gravity="end"
            android:textSize="18sp"
            android:text="Stop creating account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </FrameLayout>


</LinearLayout>