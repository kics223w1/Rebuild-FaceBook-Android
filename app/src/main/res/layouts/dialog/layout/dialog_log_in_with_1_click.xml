<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:text="Next time, sign in with one click"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:textColor="#767676"
        android:gravity="start"
        android:textSize="16sp"
        android:text="You're already sign in Facebook. Please save password and you can always sign in by clicking in account on this phone."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="50dp">


        <TextView
            android:id="@+id/btn_dialog_log_in_with_1_click_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            android:text="NEXT TIME"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/light_blue"
            android:id="@+id/btn_dialog_log_in_with_1_click_save"
            android:text="SAVE"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>


