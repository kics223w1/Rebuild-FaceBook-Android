<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rcv_item_friends_may_know_image"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/avatar_user"
        android:layout_width="50dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/rcv_item_friends_may_know_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Cao Viet Huy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rcv_item_friends_may_know_btn_add_friend"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_8dp_all_blue_ripple"
                android:gravity="center"
                android:text="Add friend"
                android:textAllCaps="false"
                android:textColor="#ecfcff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rcv_item_friends_may_know_btn_remove"
                android:layout_marginStart="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_8dp_all_light_grey_ripple"
                android:gravity="center"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>