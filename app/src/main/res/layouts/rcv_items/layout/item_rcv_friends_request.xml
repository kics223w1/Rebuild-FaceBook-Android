<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rcv_item_friends_request_image"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/avatar_user"
        android:layout_width="80dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/rcv_item_friends_request_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rcv_item_friends_request_name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Cao Viet Huy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/rcv_item_friends_request_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="8h"
                android:textColor="@color/light_grey"
                android:textSize="20sp" />

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rcv_item_friends_request_btn_confirm"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_8dp_all_blue_ripple"
                android:gravity="center"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="#ecfcff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rcv_item_friends_request_btn_delete"
                android:layout_marginStart="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_8dp_all_light_grey_ripple"
                android:gravity="center"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>