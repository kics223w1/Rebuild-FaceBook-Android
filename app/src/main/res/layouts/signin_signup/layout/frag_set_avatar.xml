<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:tag="frag_set_avatar">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.7"
            android:gravity="start"
            android:text="Select your avatar"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/btn_frag_set_avatar_skip"
            android:background="@drawable/bg_white_ripple"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="Skip"
            android:textColor="@color/light_grey"
            android:textSize="26sp"
            android:textStyle="normal" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress_frag_set_avatar"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:id="@id/layout2"
        android:layout_below="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />


    <TextView
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="Please chose your avatar to make it easy for your friend to find you."
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/image_view_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:layout_marginTop="20dp"
        android:src="@drawable/avatar_user" />



    <TextView
        android:id="@+id/btn_frag_set_avatar_chose_from_gallery"
        android:layout_above="@id/btn_frag_set_avatar_take_a_photo"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/bg_8dp_all_lightblue_ripple"
        android:text="Chose from your gallery"
        android:textColor="#ecfcff"
        android:textSize="20sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/btn_frag_set_avatar_take_a_photo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="@drawable/bg_8dp_all_lightblue_ripple"
        android:layout_alignParentBottom="true"
        android:text="Take a photo"
        android:textColor="#ecfcff"
        android:textSize="20sp"
        android:textStyle="bold" />



</RelativeLayout>