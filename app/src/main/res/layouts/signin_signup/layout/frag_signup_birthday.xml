<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:tag="frag_signup_birthday">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_signup_birthday_back"
            android:background="@drawable/bg_circle_white"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.9"
            android:gravity="start"
            android:text="Birthday"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal" />


    </LinearLayout>

    <View
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="What is your birthday ?"
        android:textColor="#050505"
        android:textSize="26sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_signup_birthday_info"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Chose your birthday. You can alsways make this birthday private"
        android:textColor="#767676"
        android:textSize="20sp"
        android:textStyle="normal" />

    <DatePicker
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/datePicker_signup_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:spinnersShown="true" />

    <TextView
        android:id="@+id/tv_signup_birthday_showage"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/btn_signup_birthday_go"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#ecfcff"
        android:textSize="20sp"
        android:textStyle="bold" />



</LinearLayout>