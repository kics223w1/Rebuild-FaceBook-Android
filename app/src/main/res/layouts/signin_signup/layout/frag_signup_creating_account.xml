<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical"
    android:tag="frag_signup_creating_account">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:gravity="start"
        android:text="Creating account"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />


    <ProgressBar
        android:id="@+id/progress_creating_account"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp" />


    <TextView
        android:id="@+id/tv_frag_signup_creating_account_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Creating account..."
        android:textColor="#050505"
        android:textSize="26sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/icon_creating_account_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:src="@drawable/icon_like"
        android:visibility="gone" />


</LinearLayout>