<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:tag="frag_signup_creating_account">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_signup_creating_account_back_and_delete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.9"
            android:gravity="start"
            android:text="Creating account"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_1"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />


    <ProgressBar
        android:id="@+id/progress_creating_account"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>


    <TextView
        android:id="@+id/tv_frag_signup_creating_account_info"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="normal"
        android:text="Creating account..."
        android:textColor="#050505"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/icon_creating_account_success"
        android:layout_marginTop="140dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_signup_creating_account_info_stop"
        android:layout_marginTop="140dp"
        android:textColor="@color/light_blue"
        android:textSize="22sp"
        android:gravity="center"
        android:text="Your email address and phone number is already use by another account , you should sign up with diffent infomation again."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_signup_creating_account_back"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Back to sign in"
        android:textColor="@color/light_blue"
        android:background="@drawable/bg_8dp_all_lightblue_ripple"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


</LinearLayout>