<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:tag="frag_signup_done">


    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_signup_done_back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.9"
            android:gravity="start"
            android:text="Terms and Privacy"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal" />


    </LinearLayout>


    <View
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_1"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_2"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Finish signing up"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="By tapping Sign up, you agree to out Term, Data Policy and Cokkies Policy. You may receive SMS notifications from us and can opt out any time. Information from your address book will be continously uploaded to Facebook so we can suggest friends and provide and improve ads for you and others, and offer a better service."
        android:textColor="#767676"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/btn_signup_done_go"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout_4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_8dp_all_blue_ripple"
        android:gravity="center"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="#ecfcff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_signup_done_go_2"
        android:layout_width="match_parent"
        android:background="@drawable/bg_8dp_all_white"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_signup_done_go"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Sign up without uploading my contacts"
        android:textColor="#3d698c"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_5"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Info about contacts in your address book, including names, phone numbers and nicknames, will be sent to Facebook so we can suggest friends and provide and improve ads for you and others , and offer a better service. You can turn this off in Settings and manage or delete contact info you share with Facebook."
        android:textColor="#767676"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/layout_5"
        android:background="@drawable/bg_8dp_all_white"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Learn More."
        android:textColor="#3d698c"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>