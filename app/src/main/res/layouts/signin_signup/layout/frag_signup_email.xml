<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical"
    android:tag="frag_signup_email">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_signup_email_back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.9"
            android:gravity="start"
            android:text="Email address"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Add your email"
        android:textColor="#050505"
        android:textSize="26sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_signup_email_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Adding an email to keep your account secure , find friends and more"
        android:textColor="#767676"
        android:textSize="16sp"
        android:textStyle="normal" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edt_signup_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:hint="Email address"
        app:boxStrokeColor="@color/light_blue"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:hintTextColor="@color/light_blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_signup_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_light_blue"
            android:textSize="20sp"
            android:textStyle="normal" />

    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_8dp_all_lightblue_ripple">


        <ProgressBar
            android:visibility="gone"
            android:id="@+id/btn_signup_email_go_process"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" />


        <TextView
            android:id="@+id/btn_signup_email_go"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#ecfcff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>


</LinearLayout>
