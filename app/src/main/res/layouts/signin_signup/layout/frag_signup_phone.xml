<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical"
    android:tag="frag_signup_phone">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_signup_phone_back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.9"
            android:gravity="start"
            android:text="Phone number"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Enter your phone number"
        android:textColor="#050505"
        android:textSize="26sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_signup_phone_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Enter your phone number. You can always make this private later"
        android:textColor="#767676"
        android:textSize="16sp"
        android:textStyle="normal" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edt_signup_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_signup_phone_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="Phone number"
        app:boxStrokeColor="#e1582c"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:hintTextColor="#e1582c">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_signup_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_light_blue"
            android:textSize="20sp"
            android:textStyle="normal" />

        <requestFocus />

    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edt_signup_country_code"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/layout_edt_signup_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="Your country code"
        app:boxStrokeColor="#e1582c"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:hintTextColor="#e1582c">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_signup_country_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_light_blue"
            android:textSize="20sp"
            android:textStyle="normal" />


    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tv_signup_phone_info_country_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_edt_signup_country_code"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical|start"
        android:text="If you don't enter country code. We wiill assign it the VietNamese code"
        android:textColor="@color/light_grey"
        android:textSize="18sp" />



    <TextView
        android:id="@+id/btn_signup_phone_go"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_signup_phone_info_country_code"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_8dp_all_lightblue_ripple"
        android:gravity="center"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#ecfcff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_signup_phone_email_address"
        android:layout_below="@+id/btn_signup_phone_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Use email address"
        android:textColor="@color/light_blue"
        android:textSize="18sp" />


</RelativeLayout>