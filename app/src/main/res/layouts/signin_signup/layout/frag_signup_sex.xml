<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:tag="frag_signup_sex">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_signup_sex_back"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0.1"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="0.9"
                android:gravity="start"
                android:text="Giới tính"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="normal" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:text="Giới tính của bạn là gì?"
            android:textColor="#050505"
            android:textSize="26sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_frag_signup_sex_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="Về sau, bạn có thể thay đổi những ai nhìn thấy giới tính của mình trên trang cá nhân. "
            android:textColor="#767676"
            android:textSize="20sp"
            android:textStyle="normal" />


        <LinearLayout
            android:id="@+id/layout_signup_sex_female"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_layout_female"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="start"
                android:text="Nữ"
                android:textColor="#050505"
                android:textSize="26sp"
                android:textStyle="normal" />

            <RadioButton
                android:id="@+id/radio_signup_sex_female"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="#1675f7"
                android:checked="false"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/layout_signup_sex_male"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_layout_male"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="start"
                android:text="Nam"
                android:textColor="#050505"
                android:textSize="26sp"
                android:textStyle="normal" />

            <RadioButton
                android:id="@+id/radio_signup_sex_male"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="#1675f7"
                android:checked="false"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/layout_signup_sex_custom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_layout_custom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="start"
                android:text="Tùy chỉnh"
                android:textColor="#050505"
                android:textSize="26sp"
                android:textStyle="normal" />

            <RadioButton
                android:id="@+id/radio_signup_sex_custom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="#1675f7"
                android:checked="false"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_custom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_layoutcustom_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center_vertical"
                android:text="Chọn danh xưng"
                android:textColor="#3a7ed3"
                android:textSize="20sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/arrow_dropdown" />


        </LinearLayout>

        <EditText
            android:id="@+id/edt_gender_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:hint="Nhập giới tính của bạn (không bắt buộc)"
            android:maxLines="1"
            android:imeOptions="actionGo"
            android:textColor="@color/black"
            android:textColorHint="#8c8d92"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="#f1f2f6"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Nhập giới tính của bạn (không bắt buộc)"
            android:textColor="#8c8d92"
            android:textSize="18sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_custom1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Danh xưng của bạn hiển thị với tất cả mọi người."
            android:textColor="#757577"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_custom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:maxLines="2"
            android:text="Chọn Tùy chỉnh nếu bạn thuộc giới tính khác hoặc không muốn tiết lộ"
            android:textColor="#767676"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/btn_signup_sex_go"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_8dp_all_lightblue_ripple"
            android:gravity="center"
            android:text="Tiếp"
            android:textAllCaps="false"
            android:textColor="#ecfcff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>